<div class="entry-details">
    {% if object.titel %}
        <a href="{{ object.titel|e }}"><span class="name">{{ object.titel|e }}, {{ object.first_name|e }}</span></a>
    {% else %}
        <span class="name">{{ object.titel|e }}, {{ object.first_name|e }}</span>
    {% endif %}
    {% if object.email %}
        <p><a href="mailto:{{ object.email|e }}" class="email">{{ object.email|e }}</a></p>
    {% endif %}
</div>
<div class="entry-extra">
    {% for tag in object.tags %}
        <span>{{ tag|e }}</span>
    {% endfor %}
</div>
