<link rel="stylesheet" href="   {{ url('theme://css-compiled/profiles.min.css') }}"/>

{% block stylesheets %}
    {% do assets.addCss('theme://css-compiled/profiles.min.css') %}
{% endblock %}

{% set grid_size = theme_var('grid-size') %}

<script>

    function copyToClipboard(var1) {
        navigator.clipboard.writeText(var1);

        var tooltip = document.getElementById(var1 + '-tooltip');
        tooltip.innerHTML = "Copied: " + var1;
    }

</script>


<section class="modular-profiles">
    <div class="container {{ grid_size }}">
        <div class="profiles-content">
            {{ page.header.heading|markdown(true) }}
        </div>
        {% if page.header.content_align == 'right' and page.header.order_mobile == 'text-first' %}
        <div class="columns mobile-reorder">
            {% else %}
            <div class="columns">
                {% endif %}

                {% if page.header.content_align == 'left' and content %}

                    <div class="column profile-column col-6 col-md-6 col-sm-12 text-column">
                        {{ content|markdown(true) }}
                    </div>
                {% endif %}

                    {% if page.header.columns == 'eine' %}
                     <div class="column profile-column col-6 col-md-6 col-sm-12 ">
                        {% for profile in page.header.profiles %}
                        <div class="profile-card">
                            <div class="ds-top"></div>
                            <div class="avatar-holder">
                                <img src="user/themes/feuerwehr-hungen/images/profile-images/{{ profile.picked_image }}"
                                     alt="Albert Einstein">
                            </div>
                            <div class="name">
                                <p>{{ profile.vorname }} {{ profile.name }}</p>
                                {% if profile.deployment %}
                                    <h6 title="Einsätze"><i class="fas fa-users"></i> <span
                                                class="followers">{{ profile.deployment }}</span></h6>
                                {% endif %}
                            </div>
                            <button class="profile-btn">
                                {{ profile.function }}
                            </button>
                            <div class="ds-info">
                                <div class="ds pens">
                                    <h6 title="Email"><i class="fa-solid fa-envelope beforI"></i>
                                        <button class="btn tooltip" onclick="copyToClipboard('{{ profile.email }}')">
                                            {{ profile.email }} <i class="fa-regular fa-copy"></i><span
                                                    class="tooltiptext" id="{{ profile.email }}-tooltip"></span>
                                        </button>
                                    </h6>
                                </div>
                            </div>
                            <div class="ds-info">
                                <div class="ds projects">
                                    {% if profile.tel %}
                                        <h6 title="Telefon"><i class="fa-solid fa-phone beforI"></i>
                                            <button class="btn">{{ profile.tel }} <a
                                                        onclick="copyToClipboard('{{ profile.email }}')"><i
                                                            class="fa-regular fa-copy"></i></a>
                                            </button>
                                        </h6>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="ds-info">

                            </div>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                {% for profile in page.header.profiles %}
                <div class="column profile-column col-6 col-md-6 col-sm-12">
                        <div class="profile-card">
                            <div class="ds-top"></div>
                            <div class="avatar-holder">
                                <img src="user/themes/feuerwehr-hungen/images/profile-images/{{ profile.picked_image }}"
                                     alt="Albert Einstein">
                            </div>
                            <div class="name">
                                <p>{{ profile.vorname }} {{ profile.name }}</p>
                                {% if profile.deployment %}
                                    <h6 title="Einsätze"><i class="fas fa-users"></i> <span
                                                class="followers">{{ profile.deployment }}</span></h6>
                                {% endif %}
                            </div>
                            <button class="profile-btn">
                                {{ profile.function }}
                            </button>
                            <div class="ds-info">
                                <div class="ds pens">
                                    <h6 title="Email"><i class="fa-solid fa-envelope beforI"></i>
                                        <button class="btn tooltip" onclick="copyToClipboard('{{ profile.email }}')">
                                            {{ profile.email }} <i class="fa-regular fa-copy"></i><span
                                                    class="tooltiptext" id="{{ profile.email }}-tooltip"></span>
                                        </button>
                                    </h6>
                                </div>
                            </div>
                            <div class="ds-info">
                                <div class="ds projects">
                                    {% if profile.tel %}
                                        <h6 title="Telefon"><i class="fa-solid fa-phone beforI"></i>
                                            <button class="btn">{{ profile.tel }} <a
                                                        onclick="copyToClipboard('{{ profile.email }}')"><i
                                                            class="fa-regular fa-copy"></i></a>
                                            </button>
                                        </h6>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="ds-info">

                            </div>
                        </div>
                </div>
                {% endfor %}
                {% endif %}

                {% if page.header.content_align == 'right' and content %}
                    <div class="column profile-column col-6 col-md-6 col-sm-12 text-column">
                        {{ content|markdown(true) }}
                    </div>

                {% endif %}

            </div>
        </div>
</section>

